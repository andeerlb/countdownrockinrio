pipeline {
    agent any 
    tools {nodejs "NodeLatest"}

    stages {
        stage('Dependencies') { 
            steps {
                sh """
                    aws --version
                    node --version
                    yarn --version
                """
            }
        }

        stage("Build") {
            steps {
                sh """
                    yarn install
                    yarn build
                """
            }
        }

        stage("Deploy") {
            steps {
                sh "ls"
            }
        }
    }
}